<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">

	<description>Spring Jdbc Template配置</description>
	<bean id="sqlManager" class="cn.com.educate.core.orm.jdbc.SqlManager">
		<property name="locations">
			<list>
				<value>classpath*:/jdbc/sql_maps.xml</value>
				<value>classpath*:/cn/com/educate/app/dao/login/xml/userinfo_sql_maps.xml</value>
				<value>classpath*:/cn/com/educate/app/dao/login/xml/operatelog_sql_maps.xml</value>
				<value>classpath*:/cn/com/educate/app/dao/login/xml/cityinfo_sql_maps.xml</value>
			</list>
		</property>
	</bean>

</beans>